<%= javascript_include_tag "count_form" %>

<h2>タグの作成・編集</h2>

<%= form_with(model: tag, local: true) do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>
      <ul>
      <% tag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" id="countable">
    <%= form.label :name, "タグ名" %>
    <%= form.text_field :name, id: "input_text" %>
    <p><span id="counter">0文字</span> / <span id="limit" data-count="20">最大文字数</span></p>
  </div>
  
    <div class="field" id="countable">
    <%= form.label :caption, "タグの説明文" %>
    <%= form.text_area :caption, id: "input_text" %>
    <p><span id="counter">0文字</span> / <span id="limit" data-count="1000">最大文字数</span></p>
  </div>

  <div class="actions">
    <%= form.submit "送信" %>
  </div>
<% end %>
