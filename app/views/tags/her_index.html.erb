<% content_for :title do %>
<%= @user.prof.pagetitle %>
<% end %>
<% content_for :css do %>
<%= stylesheet_link_tag 'tags_index' %>
<% end %>

<div class="tag_cards_container">
 
 <ul class="pan">
  <li><%= link_to "#{@user.prof.pagetitle}", me_path(@user) %></li>
  <li><%= @user.prof.name %>のタグ一覧</li>
 </ul>
 
<% if @user.tags.present? %>
<%= render partial: 'tag', collection: @tags, as: "tag" %>
<%= paginate @tags %>
<% else %>
<p>タグが一件もありません。</p>
<% if user_signed_in? && current_user.id == @user.id %>
<%= link_to "タグを新規作成する", new_tag_path, class: "a_line" %>
<% end %>
<% end %>
</div>