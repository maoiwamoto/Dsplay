<% content_for :css do %>
<%= stylesheet_link_tag 'index' %>
<% end %>

<div class="index_wrapper">
  <span class="tagname"><%= @tag.name %></span>
  <% if @tag.caption.present? %>
  <p class="tag_caption"><%= safe_join(@tag.caption.split("\n"),tag(:br)) %></p>
  <% end %>
  
  <% if user_signed_in? && current_user.id == @tag.user_id %>
  <%= link_to 'タグの編集', edit_tag_path(@tag), class: "a_line" %>
  <% end %>
  
   <% if @tag.posts.present? %>
  <ul class="item_index_container">
  <%= render partial: 'posts/post', collection: @tag.posts, as: "post" %>
  </ul>
  <% end %>
  
  <%= paginate @posts %>
  
  <% if @tag.articles.present? %>
  <ul class="item_index_container">
  <%= render partial: 'articles/article', collection: @tag.articles, as: "article" %>
  </ul>
  <% end %>
  
  <%= paginate @articles %>
  
</div>
  

