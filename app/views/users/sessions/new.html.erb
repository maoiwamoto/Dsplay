<% content_for :css do %>
<%= stylesheet_link_tag 'form' %>
<% end %>

<!--login-->

<div class="form_wrapper">
  
<h2>ログイン</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", required: "required", label: "メールアドレス" %>
          <% if alert %>
          <span>
            <strong>メールアドレスが正しくない可能性があります。</strong>
          </span>
          <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password, autofocus: "true", autocomplete: "current-password", placeholder: "パスワード", label: "パスワード" %>
          <% if alert %>
          <span>
            <strong>パスワードが正しくない可能性があります。</strong>
          </span>
          <% end %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, label: "次回から自動でログインする" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= link_to "新規登録", new_user_registration_path, class: "a_main" %>
<%= link_to "パスワードをお忘れの場合", new_user_password_path, class: "a_line" %>

</div>

