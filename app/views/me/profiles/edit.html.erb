<%= javascript_include_tag "count_form" %>

<%= form_with model: @profile, url: me_profile_path, local: true do |f| %>

  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
<%= f.label :ユーザー名 %>
<%= f.text_field :name %>
</div>
<div class="field">
<%= f.label :ユーザーページタイトル %>
<%= f.text_field :pagetitle %>
</div>
<div class="field">
<%= f.label :プロフィール文 %>
<%= f.text_area :profile, id: "input-text" %>
<div class="count_limit"><span id="counter">0文字</span> / @@@文字</div>
</div>

  <div class="field">
    <% if @profile.avator.present? %>
    <div class="attached_img_area">
    <%=  image_tag @profile.avator.url %>
    </div>
    <%= f.hidden_field :avator_cache %>
    <% end %>
<%= f.label :ユーザーアイコン画像 %>
<%= f.file_field :avator %>

  <div class="field">
    <% if @profile.headerimage.present? %>
    <div class="attached_img_area">
    <%= image_tag @profile.headerimage.url %>
    </div>
    <%= f.hidden_field :headerimage_cache %>
    <% end %>

<%= f.label :ヘッダー画像 %>
<%= f.file_field :headerimage %>


<%= f.submit %>
<% end %>