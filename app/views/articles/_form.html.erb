<% content_for :css do %>
<%= javascript_include_tag "count_form" %>
<%= stylesheet_link_tag 'form' %>
<% end %>

<%= bootstrap_form_with(model: article, local: true, label_errors: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "件のエラー") %> により投稿を保存できませんでした:</h2>
      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" id="countable">
    <%= form.text_field :title, id: "input_text", label: "タイトル(必須)" %>
    <p><span id="counter">0文字</span> / <span id="limit" data-count="35">最大文字数</span></p>
  </div>

  <div class="field" id="countable">
    <%= form.text_area :body, id: "input_text", label: "本文(必須)" %>
    <p><span id="counter">0文字</span> / <span id="limit" data-count="3000">最大文字数</span></p>
  </div>
  
    <% if article.photo.present? %>
    <div class="field">
    <div class="attached_img_area"><%=  image_tag article.photo.thumb.url, alt: "サムネイル" %></div>
    <div class="remove_checkbox"><%= form.check_box :remove_photo, label: "イメージ画像を削除する" %></div>
    </div>
    <% end %>
    
    <div class="field">
    <%= form.hidden_field :photo_cache %>
     <%= form.file_field :photo, label: "イメージ画像" %>
    </div>

  <div class="field">
    <p>この投稿と関連づける作成済みのタグを選んでください。<br>
    デフォルトでは未選択となっています。<br>
    すでにタグ付けがされている場合、先頭の空白行を選択することでタグの解除ができます。
    </p>
    <%= form.collection_select(:tag_id, current_user.tags, :id, :name, include_blank: true, label: "タグの設定") %>
  </div>

  <div class="actions">
    <%= form.submit "投稿する" %>
  </div>
<% end %>
