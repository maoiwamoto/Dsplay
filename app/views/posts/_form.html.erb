  <div class="field">
    <%= form.label :caption %>
    <%= form.text_area :caption %>
  </div>

  <div class="field">
    <%= form.label :tag_id %>
    
    <%= form.collection_select(:tag_id, Tag.all, :id, :name, include_blank: true) %>
