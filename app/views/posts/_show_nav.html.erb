<div class="show_nav" data-turbolinks="false"><%# 前後のレコードに移動するナビゲーション %>
                
        <% if post.previous.present? %>
        <div class="show_nav_item">
        <%= link_to post_path(post.previous) do %>
        <span><%= cl_image_tag post.previous.image.tiny, alt: "アイコン" %></span>
        <%= post.previous.title %>
        <% end %></div>
        <% end %>
        
        <% if post.next.present? %>
        <div class="show_nav_item">
        <%= link_to post_path(post.next) do %>
        <span><%= cl_image_tag post.next.image.tiny, alt: "アイコン" %></span>
        <%= post.next.title %>
        <% end %></div>
        <% end %>
                
        </div><%# show_nav %>
        
        
        <% if post.tag_id.present? %>
        
        <%= link_to tag_path(post.tag), class: "ttr_tag" do %>
        <%= post.tag.name %>
        <% end %>
        
        <div class="show_nav" data-turbolinks="false"><%# 同じタグに属する前後のレコードに移動するナビゲーション %>
                
        <% if post.prev_tag.present? %>
        <div class="show_nav_item">
        <%= link_to post_path(post.prev_tag) do %>
        <span><%= cl_image_tag post.prev_tag.image.tiny, alt: "アイコン" %></span>
        <%= post.prev_tag.title %>
        <% end %></div>
        <% end %>
        
        <% if post.next_tag.present? %>
        <div class="show_nav_item">
        <%= link_to post_path(post.next_tag) do %>
        <span><%= cl_image_tag post.next_tag.image.tiny, alt: "アイコン" %></span>
        <%= post.next_tag.title %>
        <% end %></div>
        <% end %>
        </div><%# show_nav %>
        <% end %>
           