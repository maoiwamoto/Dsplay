
  <% content_for :css do %>
  <%= stylesheet_link_tag 'show_post' %>
  <%= javascript_include_tag 'zoom_img' %>
  <% end %>

    <div class="post_container" data-turbolinks="false">
        
     <div class="main_img_area">
      <%= cl_image_tag @post.image, alt: "添付画像" %>
        </div>
        
        <div class="post_data">
            <h2><%= @post.title %></h2>
            <p><%= safe_join(@post.caption.split("\n"),tag(:br)) %></p>
            <p>ユーザー名：<%= @post.user.prof.name %></p>
            <time><%= @post.created_at.strftime("%Y-%m-%d") %></time>
            <hr>
            <p>トリミング後（tags/index）</p>
            <%=  cl_image_tag @post.image.tiny %>
            <hr>
            <%= link_to 'Edit', edit_post_path(@post) %> 
           
        <%= render partial: 'show_nav', locals: { post: @post } %>
           
        </div><%# post_data%>
        
    </div>
    
  