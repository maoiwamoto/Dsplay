  <%= stylesheet_link_tag 'show_post' %>
    <%= javascript_include_tag 'zoom_img' %>

    <div class="post_container">
        
     <div class="main_img_area">
      <%= image_tag @post.image.url, alt: "#{File.basename(@post.image.path, '.*')}" %>
        </div>
        
        <div class="post_data">
            <h1><%= @post.title %></h1>
            <p><%= @post.caption %></p>
            <hr>
            <p>一覧のサムネイルに使う画像サイズ確認</p>
            <%=  image_tag @post.image.grid_index_thumb.url %>
            <p>トリミング後</p>
            <%=  image_tag @post.image.tiny.url %>
            <hr>
            <p id="notice"><%= notice %></p>
            <hr>
            <%= link_to 'Edit', edit_post_path(@post) %> <br>
           <%= link_to 'Back', posts_path %><br>
           <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        
    </div>
    
  